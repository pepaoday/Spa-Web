@model DoAnPhanMem.Models.KHUYENMAI

@{
    ViewBag.Title = "Tạo Khuyến Mãi";
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

<h2>Tạo Khuyến Mãi</h2>
<style>
    .form-control {
        border: 1px solid !important;
    }

    .form-horizontal {
        padding: 20px;
        border: 1px dashed;
        border-radius: 10px;
    }

    .btn-default {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-default:hover {
            background-color: #0056b3;
            color: white;
        }

    .text-danger {
        color: #dc3545;
    }
</style>

@using (Html.BeginForm(null, null, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Khuyến Mãi</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.TENCTKM, "Tên Chương Trình Khuyến Mãi", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TENCTKM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENCTKM, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.GIAMGIA, "Giảm Giá (%)", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.GIAMGIA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GIAMGIA, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.THOIGIANBD, "Thời Gian Bắt Đầu", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.THOIGIANBD, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.THOIGIANBD, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.THOIGIANKT, "Thời Gian Kết Thúc", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.THOIGIANKT, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.THOIGIANKT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-right">
                <input type="submit" value="Tạo Mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd"
            });
            console.log("Datepicker initialized"); // Add this line for debugging
        });
    </script>
}
