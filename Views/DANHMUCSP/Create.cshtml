@model DoAnPhanMem.Models.DANHMUCSP

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layoutweb.cshtml";
}

<div class="container" style="padding-top: 160px">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <h2 class="card-header text-center">Create DANHMUCSP</h2>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "DANHMUCSP", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        
                        <div class="form-group row">
                            @Html.LabelFor(model => model.TENDM, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.TENDM, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter TENDM" } })
                                @Html.ValidationMessageFor(model => model.TENDM, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.IMG, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                <input type="file" name="file" id="file" class="form-control-file" />
                                @Html.ValidationMessageFor(model => model.IMG, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="offset-md-4 col-md-8">
                                <button type="submit" class="btn btn-primary btn-block">Create</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8 mt-4">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-block" })
        </div>
    </div>
</div>

}
